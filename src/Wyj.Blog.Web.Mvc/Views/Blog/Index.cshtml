@using Wyj.Blog.Web.Startup
@model Wyj.Blog.Web.Models.Roles.RoleListViewModel
@{
    ViewBag.Title = "我的Blog";
    ViewBag.CurrentPageName = PageNames.Blogs;
}
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Blogs/Index.js" asp-append-version="true"></script>
    </environment>

    @*<environment names="Staging,Production">
            <script src="~/view-resources/Views/Blogs/Index.min.js" asp-append-version="true"></script>
        </environment>*@
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>我的Blog</h1>
            </div>
            <div class="col-sm-6">
                <a href="javascript:;" class="btn bg-blue float-sm-right">
                    <i class="fa fa-plus-square"></i>
                    写博客
                </a>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                            </div>
                            <div class="col-md-6">
                                @await Html.PartialAsync("~/Views/Blog/Index.AdvancedSearch.cshtml")
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="BlogsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>标题</th>
                                        <th>作者</th>
                                        <th>链接</th>
                                        <th>创建时间</th>
                                        <th >@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>