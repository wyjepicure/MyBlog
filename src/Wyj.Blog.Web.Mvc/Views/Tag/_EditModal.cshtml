@using Abp.Authorization.Users
@using Wyj.Blog.Web.Models.Common.Modals
@model Wyj.Blog.Blog.Dtos.TagEditDto
@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditUser")))
<form name="TagEditForm" role="form" class="form-horizontal">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="modal-body">
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" role="tab" href="#edit-tag-details">@L("UserDetails")</a>
            </li>
        </ul>
        <div class="tab-content mt-4">
            <div role="tabpanel" class="tab-pane container active" id="edit-tag-details">
                <div class="form-group row required">
                    <label class="col-md-3 col-form-label" for="username">标签名称</label>
                    <div class="col-md-9">
                        <input id="username" type="text" class="form-control" name="TagName" value="@Model.TagName" required maxlength="@AbpUserBase.MaxUserNameLength" minlength="2">
                    </div>
                </div>
                <div class="form-group row required">
                    <label class="col-md-3 col-form-label" for="name">展示名称</label>
                    <div class="col-md-9">
                        <input id="name" type="text" class="form-control" name="DisplayName" value="@Model.DisplayName" required maxlength="@AbpUserBase.MaxNameLength">
                    </div>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>

<script src="~/view-resources/Views/Tag/_EditModal.js" asp-append-version="true"></script>